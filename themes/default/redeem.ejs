<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('./components/topnav') %>
        <!-- partial -->
        <div class="main-panel">
          <div style="background-color: #111319" class="content-wrapper">
          
              <div class="container mx-auto mt-1 text-center">
                <h2 style="display: inline-block; border-bottom: 5px solid #191C24; padding-bottom: 10px; max-width: 300px; height: 50px; line-height: 1.5; ">Redeem Coupon</h2>
                <p class="text-gray">Redeem a coupon.</p>
               </div>

           <% const alertClass = req.query.err === "SUCCESSCOUPONCODE" ? "alert-success" : "alert-danger"; %>
         <% if (req.query.err) { %>
           <div style="border-radius: 15px;" class="alert <%= alertClass %>">
             <% if (req.query.err == "MISSINGCOUPONCODE") { %>
               You have not provided a coupon code.
             <% } else if (req.query.err == "INVALIDCOUPONCODE") { %>
               Invalid coupon code. Was it claimed already?
             <% } else if (req.query.err == "SUCCESSCOUPONCODE") { %>
               Success!
             <% } else { %>
               Coupon failure.
             <% } %>
           </div>
         <% } %>
         
            <div class="row justify-content-center">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
		   <form action="/coupon_redeem">
                     <label for="code">Code:</label>
                     <input style="border-radius: 15px; padding: 8px; margin-bottom: 10px;" type="text" class="form-control" placeholder="Enter your coupon code here" name="code">
		    <button class="btn btn-primary btn-lg">Redeem</button>
		   </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/assets/vendors/select2/select2.min.js"></script>
    <script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <%- include('./components/scripts') %>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/assets/js/file-upload.js"></script>
    <script src="/assets/js/typeahead.js"></script>
    <script src="/assets/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>
