<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/adminsidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('./components/topnav') %>
        <!-- partial -->
        <div class="main-panel">
          <div style="background-color: #111319" class="content-wrapper">

           <div class="container mx-auto mt-1 text-center">
            <h2 style="display: inline-block; border-bottom: 5px solid #191C24; padding-bottom: 10px; max-width: 200px;">Coupons</h2>
            <p class="text-gray">Create and revoke coupons.</p>
          </div>
           
            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Create a coupon</h4>
                                    <form action="/create_coupon">
                                        <label for="code">Code:</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="code" placeholder="Put nothing here to generate a random code"><br><br>
                                        <label for="coins">Coins:</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" placeholder="100" name="coins" type="number"><br><br>
                                        <label for="ram">RAM (GBs):</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" placeholder="2" name="ram" type="number"><br><br>
                                        <label for="disk">Disk (GBs):</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" placeholder="10" name="disk" type="number"><br><br>
                                        <label for="cpu">CPU (Cores):</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" placeholder="1" name="cpu" type="number"><br><br>
                                        <label for="servers">Servers:</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" placeholder="1" name="servers" type="number"><br><br>
                                        <button class="btn btn-primary btn-lg" type="submit">Create</button>
                                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Revoke coupon</h4>
                                    <form action="/revoke_coupon">
                                        <label for="code">Code:</label>
                                        <input style="border-radius: 15px; padding: 8px;" placeholder="EXAMPLE100" class="form-control" name="code"><br><br>
                                        <button class="btn btn-primary btn-lg" type="submit">Revoke</button>
                                    </form>
                  </div>
                </div>
              </div>
          </div></div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- Plugin js for this page -->
    <script src="/assets/vendors/select2/select2.min.js"></script>
    <script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <%- include('./components/scripts') %>
    <!-- Custom js for this page -->
    <script src="/assets/js/file-upload.js"></script>
    <script src="/assets/js/typeahead.js"></script>
    <script src="/assets/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>
