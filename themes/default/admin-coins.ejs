<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/adminsidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('./components/topnav') %>
        <!-- partial -->
        <div class="main-panel">
          <div style="background-color: #111319" class="content-wrapper">

            <div class="container mx-auto mt-1 text-center">
              <h2 style="display: inline-block; border-bottom: 5px solid #191C24; padding-bottom: 10px; max-width: 200px;">Coins</h2>
              <p class="text-gray">Change the coins of users.</p>
            </div>

            <% if (req.query.err) { %>
              <% if (req.query.err !== "none") { %>
              <% } else if (req.query.err == "none") { %>
                <div class="alert" style="background-color: #007fcc; border-radius: 15px;">
                  Success! Action completed
                </div>
              <% } %>
            <% } %>

            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Set user's coins</h4>
                                    <form action="/setcoins">
                                        <label for="id">Discord ID:</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="id" placeholder="0000000000000000"><br><br>
                                        <label for="coins">Coins:</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="coins" placeholder="100" type="number"><br><br>
                                        <button class="btn btn-primary btn-lg" type="submit">Set</button>
                                    </form>
                  </div>
                </div>
              </div>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Add user's coins</h4>
                                    <form action="/addcoins">
                                        <label for="id">Discord ID:</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="id" placeholder="0000000000000000"><br><br>
                                        <label for="coins">Coins:</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="coins" placeholder="100" type="number"><br><br>
                                        <button class="btn btn-primary btn-lg" type="submit">Add</button>
                                    </form>
                </div>
              </div>
            </div>
          </div></div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- Plugin js for this page -->
    <script src="/assets/vendors/select2/select2.min.js"></script>
    <script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <%- include('./components/scripts') %>
    <!-- Custom js for this page -->
    <script src="/assets/js/file-upload.js"></script>
    <script src="/assets/js/typeahead.js"></script>
    <script src="/assets/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>
